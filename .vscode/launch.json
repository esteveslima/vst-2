{
    // https://code.visualstudio.com/docs/languages/rust
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach Debug Rust",
            "sourceLanguages": ["rust"],
            "type": "lldb",
            "request": "attach",            
            "pid": "${command:pickProcess}",    // For rust projects, usually look for the process running the /target/debug/{PROJECT_NAME}
        },
